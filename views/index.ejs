<%- include ('layout/header') %>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong>
                        <%= message.message %>
                    </strong>
                </div>
                <% } %>
                <div class="table-responsive">
                    <% if (plans != '') { %>

                   
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>Ville</th>
                                <th>Nom Site</th>
                                <th>Adresse Site</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% plans.forEach((row, index) => { %>
                                <tr>
                                    <td><%= row.ville %></td>
                                    <td><%= row.NomSite %></td>
                                    <td><%= row.Adresse %></td>
                                    <td><img src="<%= row.image %>" with="50" class="img-thumbnail"/></td>
                                    <td>
                                        <a href="/edit/<%= row._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                           <% }) %>
                            
                        </tbody>
                    </table>
                    <%  }  else { %>
                        <h1 class="text-center text-secondary mt-5"> No Plan found in the database!</h1>
                    <% } %>
                </div>
            </div>
        </div>

    </div>
    <%- include ('layout/footer') %>